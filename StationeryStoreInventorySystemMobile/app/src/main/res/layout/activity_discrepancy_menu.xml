<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logic.stationerystoreinventorysystemmobile.DiscrepancyMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Generate Discrepancy"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdhoc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView22"
            android:layout_marginTop="105dp"
            android:onClick="adhocClick"
            android:text="Adhoc Discrepancy" />

        <Button
            android:id="@+id/btnMonthly"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnAdhoc"
            android:layout_marginTop="44dp"
            android:onClick="monthlyClick"
            android:text="Monthly Inventory Check" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
