<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dip"
        style="@style/TextStyle"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dip"
        style="@style/TextStyle"/>
        <!--android:text="@string/department_actinghead_Spinner" -->


    <Spinner
        android:id="@+id/spinnerCollectPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyle"/>
        <!--android:prompt="@string/spinner_title"-->


    <TextView
        android:id="@+id/txtDateFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From: "
        style="@style/TitleStyle"/>


    <TextView
        android:id="@+id/txtSDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/TextStyle" />

    <Button
        android:id="@+id/btnForSDate"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Edit Start Date" />

    <TextView
        android:id="@+id/txtDateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:"
        style="@style/TitleStyle" />

    <TextView

        android:id="@+id/txtEDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/TextStyle"
        />

    <Button
        android:id="@+id/btnForEDate"
        style="@style/button_text"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Edit End Date" />

    <Button
        android:id="@+id/btnUpdateAHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Acting Head"
        style="@style/button_text"
        android:background="@drawable/green_button" />



</LinearLayout>